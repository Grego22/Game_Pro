<h1 class="current-catergory"><%= params[:catergory]%></h1>

<% if @games.count ==0%>
  <h3>There are no games in this catergory</h3>
<% else %>
  <div class="row">
    <% @games.each do |game| %>
      <h2><%= link_to game.title, game_path(game)%> </h2>
      <div class="col-md-3">
        <a href="/games/<%=game.id %>">
          <%= image_tag game.img.url(:medium), class: "game" %>
        </a>
      </div>
    <% end %>
</div>
<% end %>

<%=link_to "Add Game", new_game_path %>
