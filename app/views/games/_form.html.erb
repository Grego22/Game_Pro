<%= simple_form_for @game do |f| %>
  <%= select_tag(:catergory_id, options_for_select(@catergories),
  :prompt => "Select Catergory" )%>
  <%= f.file_field :game_img %>
  <%= f.input :title, label: "Game Title" %>
  <%= f.input :company, label: "Publishing Company" %>
  <%= f.input :description %>
  <%= f.button :submit %>
<% end %>
